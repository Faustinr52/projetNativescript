<Page loaded="pageLoaded" xmlns="http://www.nativescript.org/tns.xsd">

    <ActionBar tap="onTap" title="Complétez votre profil">
    </ActionBar>
    <StackLayout>
        <StackLayout orientation="horizontal">
            <Image class="pic" src="~/profile/images/pic.png" />
            <Label text="Pseudo : " />
            <TextField  class="pseudo" hint="" />
            <Image class="pen" src="~/profile/images/pencil.png"></Image>
        </StackLayout>
        <StackLayout class="content">
            <Label class="modifier" text="Modifier photo" />
            <Label text="Bio : " />
            <TextField class="bioText" hint="" />
            <Label text="Votre Véhicule* : " />
            <StackLayout orientation="horizontal">
                <Label text="Marque : " />
                <TextField id="marque" class="addWidth" hint="" />
            </StackLayout>
            <StackLayout orientation="horizontal">
                <Label text="Modèle : " />
                <TextField id="modele" class="addWidth" hint="" />
            </StackLayout>
            <StackLayout orientation="horizontal">
                <Label text="Chevaux : " />
                <TextField id="chevaux" class="addWidth" hint="" />
            </StackLayout>
            <StackLayout orientation="horizontal">
                <Label text="CV : " />
                <TextField id="cv" class="cv" hint="" />
            </StackLayout>
            <StackLayout orientation="horizontal">
                <Label text="Département : " />
                <TextField id="dpt" class="depart" hint="" />
            </StackLayout>
            <Label tap="ajoutVehicule" class="ajout"
                text="Ajoutez plus de vehicules" />
            <Label text="Vos photos : " />
            <StackLayout orientation="horizontal">
                <Image class="addPhoto"
                    src="~/profile/images/addPhoto.png">
                </Image>
                <Image class="addPhoto"
                    src="~/profile/images/addPhoto.png">
                </Image>
                <Image class="addPhoto"
                    src="~/profile/images/addPhoto.png">
                </Image>
            </StackLayout>
            <Label class="ajout" text="Ajouter plus de photos" />
            <Button tap="valider" class="Valider" text="Valider"></Button>
        </StackLayout>
        <!-- <Label class="footer" /> -->
    </StackLayout>
</Page>