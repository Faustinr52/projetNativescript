<Page loaded="pageLoaded" xmlns="http://www.nativescript.org/tns.xsd">
    <ActionBar tap="retourProfile" title="Profile vehicule">
    </ActionBar>
    <StackLayout>
        <StackLayout class="contenu">
            <Label text="Votre Vehicule : " />
            <StackLayout orientation="horizontal">
                <Label text="Marque : " />
                <TextField class="addWidth" hint="" />
            </StackLayout>
            <StackLayout orientation="horizontal">
                <Label text="Modèle : " />
                <TextField class="addWidth" hint="" />
            </StackLayout>
            <StackLayout orientation="horizontal">
                <Label text="Chevaux : " />
                <TextField class="addWidth" hint="" />
            </StackLayout>
            <StackLayout orientation="horizontal">
                <Label text="CV : " />
                <TextField class="cv" hint="" />
            </StackLayout>
            <StackLayout orientation="horizontal">
                <Label text="Département : " />
                <TextField class="depart" hint="" />
            </StackLayout>
            <Button class="Valider" tap="valider" text="Valider"></Button>
        </StackLayout>
        <!-- <Label class="footer" /> -->
    </StackLayout>
</Page>